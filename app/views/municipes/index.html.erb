<div class="card">
  <div class="card-header">
    <h1>Listagem de Munícipes</h1>
  </div>
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>CNS</th>
          <th>CPF</th>
          <th>Data de Nascimento</th>
          <th>Email</th>
          <th>Foto</th>
          <th>Nome Completo</th>
          <th>Status</th>
          <th>Telefone</th>
          <th>CEP</th>
          <th>Bairro</th>
          <th>Cidade</th>
          <th>Estado</th>
          <th>Complemento</th>
          <th>Logradouro</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @municipes.each do |municipe| %>
          <tr>
            <td><%= municipe.id %></td>
            <td><%= municipe.cns %></td>
            <td><%= municipe.cpf %></td>
            <td><%= municipe.data_nascimento %></td>
            <td><%= municipe.email %></td>
            <td><%= municipe.fotos %></td>
            <td><%= municipe.nome_completo %></td>
            <td><%= municipe.status ? 'Ativo' : 'Inativo' %></td>
            <td><%= municipe.telefone %></td>
            <td><%= municipe.endereco.cep  if municipe.endereco %></td>
            <td><%= municipe.endereco.bairro if municipe.endereco  %></td>
            <td><%= municipe.endereco.cidade if municipe.endereco %></td>
            <td><%= municipe.endereco.uf  if municipe.endereco %></td>
            <td><%= municipe.endereco.complemento  if municipe.endereco %></td>
            <td><%= municipe.endereco.logradouro  if municipe.endereco %></td>
            <td><%= link_to 'Mostrar', municipe %></td>
            <td><%= link_to 'Editar', edit_municipe_path(municipe) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Novo Munícipe', new_municipe_path, class: 'btn btn-primary' %>
  </div>
</div>
