<div class="card">
  <div class="card-header">
    Cadastro de MunÃ­cipe
  </div>
  <div class="card-body">
    <%= form_with(model: @municipe, local: true) do |form| %>
      <% if @municipe.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@municipe.errors.count, "erro") %> ocorreu enquanto tentava salvar o municipe:</h2>

          <ul>
          <% @municipe.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :nome_completo, class: "form-label" %>
        <%= form.text_field :nome_completo, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :cpf, class: "form-label" %>
        <%= form.text_field :cpf, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :cns, class: "form-label" %>
        <%= form.text_field :cns, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :data_nascimento, class: "form-label" %>
        <%= form.date_field :data_nascimento, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :telefone, class: "form-label" %>
        <%= form.text_field :telefone, class: "form-control" %>
      </div>
      <hr>

      <%= form.fields_for :endereco do |endereco_form| %>
        <div class="mb-3">
          <%= endereco_form.label :cep, class: "form-label" %>
          <%= endereco_form.text_field :cep, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= endereco_form.label :bairro, class: "form-label" %>
          <%= endereco_form.text_field :bairro, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= endereco_form.label :cidade, class: "form-label" %>
          <%= endereco_form.text_field :cidade, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= endereco_form.label :codigo_ibge, class: "form-label" %>
          <%= endereco_form.text_field :codigo_ibge, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= endereco_form.label :complemento, class: "form-label" %>
          <%= endereco_form.text_field :complemento, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= endereco_form.label :logradouro, class: "form-label" %>
          <%= endereco_form.text_field :logradouro, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= endereco_form.label :uf, class: "form-label" %>
          <%= endereco_form.text_field :uf, class: "form-control" %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :foto, class: "form-label" %>
        <%= form.text_field :foto, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :status, class: "form-label" %>
        <%= form.check_box :status, class: "form-check-input" %>
      </div>

      <div class="mb-3">
        <%= form.submit "Salvar", class: "btn btn-primary" %>
      </div>
      <%= link_to "Voltar", :back, class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>
